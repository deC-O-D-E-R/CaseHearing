        <div class="container">
            <h1 class="logo">CrimeConnect</h1>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/aboutUs">AboutUs</a></li>
                <% if (loggedIn) { %>
                <li id="dashboardLink"><a href="/dashboard">Dashboard</a></li>
                    <button onclick="logout()" style="background-color: red; color: white; border: none; border-radius: 6px; padding: 2px; font-weight: bold; font-size: 15px;">Logout</button>
                <% } %>
    
            </ul>
        </div>
    </nav>

    <div class="ticker-container">
